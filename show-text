#include <genesis.h>

int main()
{
    // Initialize SGDK
    VDP_init();
    
    // Set the font
    VDP_setTextPalette(PAL1);
    VDP_setTextPlan(PLAN_A);
    VDP_setTextPriority(0);
    VDP_setTextScale(1, 1);
    
    // Clear the screen
    VDP_clearPlan(PLAN_A, TRUE);
    
    // Print text
    VDP_drawText("Hello World!", 10, 10);
    
    while(1)
    {
        // Your game loop code goes here
    }
    
    return 0;
}
